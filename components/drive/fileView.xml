<component name = "fileView" extends = "ListPanel">
    <interface>
        <field id="fileId" type="string" onChange = "readmediaitem"/>
        <!-- <field id="video" type="node" />
        <field id="mediaItem" type="node" onChange = "readmediaitem" />
        <field id="lastFocusNode" type="node" /> -->
    </interface>
    <script type = "text/brightscript" uri = "pkg:/components/drive/fileView.brs"/>

    <children>
        <LayoutGroup 
            id = "layoutgroup4" 
            translation = "[ 0, 40 ]" 
            itemSpacings = "[8]">
            <LabelList id = "mediaSourceList" numRows="6">
            </LabelList>
            <Label 
                id = "mediaTitle" width="645"
                wrap = "true"
                font = "font:MediumBoldSystemFont" />
            <Label 
                id = "mediaFileName" width="645"
                maxLines = "2"
                wrap = "true"
                font = "font:SmallSystemFont" />
            <Label 
                id = "mediaDesc" width="645"
                wrap = "true" 
                maxLines = "4"
                font = "font:SmallestSystemFont" />

        </LayoutGroup>

    </children>

</component>
