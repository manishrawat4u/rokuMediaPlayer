<component name = "S4" extends = "Panel">
    <interface>
        <field id="video" type="node" />
        <field id="mediaItem" type="node" onChange = "readmediaitem" />
        <field id="lastFocusNode" type="node" />
    </interface>
    <script type = "text/brightscript" uri = "pkg:/components/s4/s4.brs"/>

    <children>
        <LayoutGroup 
            id = "layoutgroup4" 
            translation = "[ 0, 40 ]" 
            itemSpacings = "[8]">
            <Label 
                id = "mediaTitle" width="645"
                wrap = "true"
                font = "font:MediumBoldSystemFont" />
            <LabelList id = "mediaSourceList" itemSize="[512, 32]" numRows="6">
                <ContentNode role = "content">
                    <ContentNode title = "Anythin" />
                    <ContentNode title = "Choose" />
                    <ContentNode title = "Play" />
                </ContentNode>
            </LabelList>
            <Label 
                id = "mediaFileName" width="645"
                maxLines = "2"
                wrap = "true"
                font = "font:SmallSystemFont" />
            <Label 
                id = "mediaDesc" width="645"
                wrap = "true" 
                maxLines = "4"
                font = "font:SmallestSystemFont" />

        </LayoutGroup>

    </children>

</component>
